<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login Activity"
        android:onClick="login"
        android:textAllCaps="false"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home Activity"
        android:textAllCaps="false"
        android:onClick="home"
        android:layout_marginTop="6dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile Activity"
        android:textAllCaps="false"
        android:onClick="profile"
        android:layout_marginTop="6dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Services Activity"
        android:onClick="services"
        android:textAllCaps="false"
        android:layout_marginTop="6dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Profile Activity"
        android:textAllCaps="false"
        android:onClick="fullprofile"
        android:layout_marginTop="6dp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Services Activity"
        android:onClick="allservices"
        android:textAllCaps="false"
        android:layout_marginTop="6dp"/>


</LinearLayout>