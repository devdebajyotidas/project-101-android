<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical"
    tools:openDrawer="start"
    android:id="@+id/drawer">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:id="@+id/homeCard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/homeRelative"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="25"
            app:cardBackgroundColor="@color/gray100"
            app:cardElevation="4dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/home_widgetbg">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="24dp"
                    android:gravity="center">
                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/spinner_background"
                        android:ellipsize="middle"
                        android:gravity="start"
                        android:spinnerMode="dropdown"
                        android:popupBackground="@color/white"
                        android:overlapAnchor="true"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_alignParentBottom="true"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:paddingStart="30dp"
                        android:paddingEnd="10dp"
                        android:textColor="@color/gray500"
                        android:text="75 found in your area"/>
                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/home_menu"
                            android:contentDescription="@string/home_image"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/purple_marker"
                            android:contentDescription="@string/home_image"/>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:id="@+id/homeRelative"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/homeCard"
            app:layout_constraintVertical_weight="75">
            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/mapContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#317984f3">
                <Space
                    android:id="@+id/topSpace"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintVertical_weight="56"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/cardview" />
                <Space
                    android:id="@+id/leftSpace"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintHorizontal_weight="10"
                    app:layout_constraintTop_toBottomOf="@+id/topSpace"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/cardview"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <Space
                    android:id="@+id/rightSpace"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintHorizontal_weight="10"
                    app:layout_constraintTop_toBottomOf="@+id/topSpace"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/cardview"/>
                <Space
                    android:id="@+id/bottomSpace"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintVertical_weight="4"
                    app:layout_constraintTop_toBottomOf="@+id/cardview"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardview"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintVertical_weight="30"
                    app:layout_constraintHorizontal_weight="90"
                    app:layout_constraintLeft_toRightOf="@+id/leftSpace"
                    app:layout_constraintRight_toLeftOf="@+id/rightSpace"
                    app:layout_constraintBottom_toTopOf="@+id/bottomSpace"
                    app:layout_constraintTop_toBottomOf="@+id/topSpace"
                    app:cardBackgroundColor="@color/home_widgetbg"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="6dp">
                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:id="@+id/hl1"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:orientation="vertical"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@+id/hl2"
                            app:layout_constraintHorizontal_weight="30"
                            android:weightSum="2.5">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1.5"
                                android:padding="10dp">
                                <views.CircleImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@mipmap/man"
                                    app:civ_border_width="0dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:paddingTop="10dp">
                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@mipmap/call_blue"
                                    android:contentDescription="@string/home_image"/>
                            </LinearLayout>
                        </LinearLayout>



                        <LinearLayout
                            android:id="@+id/hl2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:orientation="vertical"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@+id/hl1"
                            app:layout_constraintRight_toLeftOf="@+id/hl3"
                            app:layout_constraintHorizontal_weight="45"
                            android:weightSum="2.5">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1.5"
                                android:padding="10dp"
                                android:orientation="vertical"
                                android:gravity="center_vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="James Riyadi"
                                    android:textColor="@color/testcolor"
                                    android:textSize="@dimen/text_16" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableStart="@mipmap/purple_circle"
                                    android:drawablePadding="6dp"
                                    android:text="Professional Builder"
                                    android:layout_marginTop="4dp"
                                    android:textColor="@color/testcolor"
                                    android:singleLine="true"
                                    android:textSize="@dimen/text_10" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:drawableStart="@mipmap/purple_circle"
                                    android:drawablePadding="6dp"
                                    android:text="Verified User"
                                    android:textColor="@color/testcolor"
                                    android:textSize="@dimen/text_10" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="@string/DONE"
                                        android:textColor="@color/gray500"
                                        android:textSize="@dimen/text_12"
                                        tools:ignore="TooDeepLayout" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="@string/ONGOING"
                                        android:textColor="@color/gray500"
                                        android:textSize="@dimen/text_12" />

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="45"
                                        android:textColor="@color/testcolor"
                                        android:textSize="@dimen/text_14" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="2"
                                        android:textColor="@color/gray500"
                                        android:textSize="@dimen/text_14" />
                                </LinearLayout>


                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/hl3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@+id/hl2"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintHorizontal_weight="25">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1.5"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/rating_bg"
                                    android:contentDescription="@string/home_image"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:paddingTop="10dp"
                                android:paddingStart="0dp"
                                android:paddingEnd="10dp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="6dp"
                                    android:paddingBottom="6dp"
                                    android:textColor="@color/four"
                                    android:textSize="@dimen/text_12"
                                    android:text="@string/DETAIL"
                                    android:gravity="center"
                                    android:background="@drawable/details_bg"/>
                            </LinearLayout>
                        </LinearLayout>
                    </android.support.constraint.ConstraintLayout>
                </android.support.v7.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/fullmap_bg"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="24dp"
                    android:textSize="12sp"
                    android:textColor="@color/four"
                    android:gravity="center"
                    android:text="@string/SEE_FULL_MAP"/>

            </android.support.constraint.ConstraintLayout>

        </RelativeLayout>

    </android.support.constraint.ConstraintLayout>
    <include layout="@layout/navigation_view"/>
</android.support.v4.widget.DrawerLayout >
