<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bImg"
        app:layout_constraintVertical_weight="80"
        android:gravity="center">
        <Space
            android:id="@+id/leftSpace"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/aadharEt"
            app:layout_constraintHorizontal_weight="15" />
        <Space
            android:id="@+id/rightSpace"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/aadharEt"
            app:layout_constraintHorizontal_weight="15" />
        <Space
            android:id="@+id/sp1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/aadharEt"
            app:layout_constraintVertical_weight="8" />

        <EditText
            android:id="@+id/aadharEt"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/purple_border"
            android:hint="@string/AADHAAR_NO"
            android:maxLength="20"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical"
            android:textColor="@color/testcolor"
            android:textColorHint="@color/gray400"
            android:textSize="@dimen/text_14"
            tools:ignore="TextFields"
            app:layout_constraintLeft_toRightOf="@+id/leftSpace"
            app:layout_constraintRight_toLeftOf="@+id/rightSpace"
            app:layout_constraintTop_toBottomOf="@+id/sp1"
            app:layout_constraintBottom_toTopOf="@+id/sp2"
            app:layout_constraintHorizontal_weight="70"
            app:layout_constraintVertical_weight="18"
            />
        <Space
            android:id="@+id/sp2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/aadharEt"
            app:layout_constraintBottom_toTopOf="@+id/addressEt"
            app:layout_constraintVertical_weight="4" />

        <EditText
            android:id="@+id/addressEt"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/purple_border"
            android:hint="@string/ADDRESS"
            android:maxLength="20"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical"
            android:textColor="@color/testcolor"
            android:textColorHint="@color/gray400"
            android:textSize="@dimen/text_14"
            app:layout_constraintLeft_toRightOf="@+id/leftSpace"
            app:layout_constraintRight_toLeftOf="@+id/rightSpace"
            app:layout_constraintHorizontal_weight="70"
            app:layout_constraintTop_toBottomOf="@id/sp2"
            app:layout_constraintBottom_toTopOf="@+id/sp3"
            app:layout_constraintVertical_weight="18"
            tools:ignore="TextFields" />
        <Space
            android:id="@+id/sp3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/addressEt"
            app:layout_constraintBottom_toTopOf="@+id/dobEt"
            app:layout_constraintVertical_weight="4" />

        <EditText
            android:id="@+id/dobEt"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/purple_border"
            android:hint="@string/DOB"
            android:maxLength="20"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical"
            android:textColor="@color/testcolor"
            android:textColorHint="@color/gray400"
            android:textSize="@dimen/text_14"
            app:layout_constraintLeft_toRightOf="@+id/leftSpace"
            app:layout_constraintRight_toLeftOf="@+id/rightSpace"
            app:layout_constraintHorizontal_weight="70"
            app:layout_constraintTop_toBottomOf="@id/sp3"
            app:layout_constraintBottom_toTopOf="@+id/sp4"
            app:layout_constraintVertical_weight="18"/>
        <Space
            android:id="@+id/sp4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/dobEt"
            app:layout_constraintBottom_toTopOf="@+id/pincodeEt"
            app:layout_constraintVertical_weight="4" />

        <EditText
            android:id="@+id/pincodeEt"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/purple_border"
            android:hint="@string/PIN"
            android:maxLength="20"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical"
            android:textColor="@color/testcolor"
            android:textColorHint="@color/gray400"
            android:textSize="@dimen/text_14"
            app:layout_constraintLeft_toRightOf="@+id/leftSpace"
            app:layout_constraintRight_toLeftOf="@+id/rightSpace"
            app:layout_constraintHorizontal_weight="70"
            app:layout_constraintTop_toBottomOf="@id/sp4"
            app:layout_constraintBottom_toTopOf="@id/sp5"
            app:layout_constraintVertical_weight="18"/>

        <Space
            android:id="@+id/sp5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/pincodeEt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_weight="8" />


    </android.support.constraint.ConstraintLayout>
    <ImageView
        android:id="@+id/bImg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:contentDescription="@string/profile_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll1"
        app:layout_constraintVertical_weight="20"
        android:src="@mipmap/aadhaar_bg"/>
</android.support.constraint.ConstraintLayout>